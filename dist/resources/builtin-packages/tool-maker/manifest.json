{
  "id": "tool-maker",
  "name": "Tool Maker",
  "version": "1.0.0",
  "description": "快速生成实用小工具和CLI脚本",
  "author": "AI Assistant",
  "runtime": "node",
  "main": "scripts/main.js",
  "skillFile": "SKILL.md",
  "tags": ["tool", "script", "cli", "automation"],
  "permissions": ["fs:read", "fs:write", "shell", "mcp:call"],
  "mcpTools": ["builtin_read_file", "builtin_write_file", "builtin_shell_exec"],
  "config": {
    "outputDir": {
      "type": "string",
      "default": "tools",
      "description": "工具输出目录"
    },
    "language": {
      "type": "string",
      "default": "auto",
      "description": "生成语言 (auto/javascript/python/shell)",
      "enum": ["auto", "javascript", "python", "shell"]
    }
  }
}
